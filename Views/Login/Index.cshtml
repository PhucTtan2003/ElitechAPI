@model Elitech.Controllers.LoginController.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout";
}

<style>
    :root {
        --b: #0D47A1;
        --b2: #1E88E5;
        --o: #F58220;
        --o2: #E36F15;
        --txt: #0e1320;
        --mut: #6b7280;
        --radius: 24px;
        --radius-sm: 18px;
        --success: #16a34a;
        --border-soft: #e5e7eb;
    }

    /* BG tổng thể – bỏ blur, giữ nền sáng với 1 chút gradient nhẹ */
    html, body {
        height: 100%;
    }

    body {
        background: radial-gradient(900px 600px at 8% -10%, rgba(30,136,229,.10), transparent 65%), radial-gradient(900px 600px at 110% -10%, rgba(245,130,32,.08), transparent 65%), #f3f4fb;
        font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        color: var(--txt);
    }

    .login-wrap {
        min-height: calc(100vh - 120px);
        padding: 28px 0 36px;
    }

    .login-grid {
        display: grid;
        grid-template-columns: 1.15fr 1fr;
        gap: 32px;
        align-items: stretch;
    }

    /* ===== Brand (trái) – bỏ backdrop-filter, chỉ dùng nền trắng + gradient rất nhẹ ===== */
    .brand-pane {
        position: relative;
        overflow: hidden;
        padding: 26px 26px 24px;
        border-radius: var(--radius);
        background: linear-gradient(145deg, #ffffff, #f5f7ff);
        border: 1px solid rgba(148,163,184,.28);
        box-shadow: 0 14px 32px rgba(15,23,42,.16), 0 2px 6px rgba(15,23,42,.06);
    }

    .brand-badge {
        display: inline-flex;
        gap: 10px;
        align-items: center;
        background: #ffffff;
        padding: 9px 13px;
        border-radius: 14px;
        border: 1px solid rgba(226,232,240,1);
        font-weight: 700;
        color: var(--b);
        box-shadow: 0 6px 14px rgba(15,23,42,.10);
    }

        .brand-badge i {
            color: var(--o2);
        }

    .chip {
        background: #fff7ed;
        color: var(--o2);
        border: 1px solid #fed7aa;
        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 600;
        font-size: .82rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .chip i {
            font-size: .9rem;
        }

    .brand-title {
        font-weight: 900;
        letter-spacing: -.02em;
        color: var(--txt);
    }

        .brand-title .grad {
            background: linear-gradient(90deg, var(--b2), var(--o));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

    .brand-points {
        margin: 18px 0 0;
        padding: 0;
        list-style: none;
    }

        .brand-points li {
            display: flex;
            gap: 12px;
            align-items: flex-start;
            margin: 10px 0;
            color: #1f2937;
            font-size: .9rem;
        }

        .brand-points i {
            font-size: 1rem;
            color: var(--b2);
            background: #eff6ff;
            width: 26px;
            height: 26px;
            border-radius: 8px;
            display: grid;
            place-items: center;
        }

    /* ===== Form (phải) – bỏ blur, glass, border gradient mask ===== */
    .form-pane {
        position: relative;
        padding: 26px 26px 24px;
        border-radius: var(--radius);
        background: #ffffff;
        border: 1px solid rgba(148,163,184,.25);
        box-shadow: 0 14px 32px rgba(15,23,42,.16), 0 2px 6px rgba(15,23,42,.06);
    }

    .form-header h1 {
        font-weight: 900;
        letter-spacing: -.02em;
        margin: 0;
        color: var(--txt);
        font-size: 1.55rem;
    }

    .form-header p {
        color: var(--mut);
        margin: 6px 0 0;
        font-size: .9rem;
    }

    .input-group.elitech-input .input-group-text {
        background: #ffffff;
        border: 1px solid var(--border-soft);
        border-right: 0;
        border-radius: 14px 0 0 14px;
        color: var(--mut);
    }

    .input-group.elitech-input .form-control {
        background: #f1f5f9;
        border: 1px solid var(--border-soft);
        border-left: 0;
        border-right: 0;
        border-radius: 0;
        padding-top: 11px;
        padding-bottom: 11px;
        box-shadow: none;
        transition: border-color .15s ease, background-color .15s ease, box-shadow .15s ease;
    }

    .btn-eye {
        border: 1px solid var(--border-soft);
        border-left: 0;
        border-radius: 0 14px 14px 0;
        background: #ffffff;
    }

    .form-control:focus {
        background: #ffffff;
        border-color: rgba(37,99,235,.7);
        box-shadow: 0 0 0 .15rem rgba(59,130,246,.20);
    }

    .btn-elitech {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        background: linear-gradient(180deg, #1D63D4, #0F56C9);
        border: none;
        border-radius: 16px;
        padding: 11px 16px;
        font-weight: 800;
        color: #fff;
        box-shadow: 0 14px 26px rgba(29,99,212,.28), 0 2px 6px rgba(15,23,42,.10);
        transition: transform .12s ease, box-shadow .12s ease, filter .12s ease;
    }

        .btn-elitech:hover {
            transform: translateY(-1px);
            filter: brightness(1.03);
            box-shadow: 0 18px 32px rgba(29,99,212,.32), 0 3px 8px rgba(15,23,42,.12);
        }

    .btn-alt {
        display: flex;
        align-items: center;
        gap: 10px;
        justify-content: center;
        border: 1px dashed #d6dae2;
        border-radius: 14px;
        background: #ffffff;
        padding: 11px 14px;
        font-weight: 600;
        font-size: .9rem;
        color: var(--txt);
        text-decoration: none;
        transition: background .12s ease, border-color .12s ease;
    }

        .btn-alt i {
            color: var(--mut);
        }

        .btn-alt:hover {
            background: #f9fafb;
            border-color: #cbd5f0;
        }

    .split-or {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        gap: 12px;
        color: var(--mut);
        font-size: .82rem;
        margin: 16px 0;
        text-transform: uppercase;
        letter-spacing: .12em;
    }

        .split-or::before,
        .split-or::after {
            content: "";
            height: 1px;
            background: linear-gradient(90deg, transparent, #e5e7eb, transparent);
        }

    .links a {
        color: var(--b2);
        text-decoration: none;
    }

        .links a:hover {
            text-decoration: underline;
        }

    hr {
        border-color: #e5e7eb;
        opacity: 1;
    }

    /* ====== RESPONSIVE ====== */
    @@media (max-width: 992px) {
        .login-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .form-pane {
            order: 1;
        }

        .brand-pane {
            order: 2;
        }

        .brand-pane,
        .form-pane {
            border-radius: var(--radius-sm);
            box-shadow: 0 10px 22px rgba(15,23,42,.14), 0 2px 5px rgba(15,23,42,.08);
            padding: 22px;
        }

        .brand-title {
            font-size: 1.6rem;
            line-height: 1.25;
        }
    }

    @@media (max-width: 576px) {
        .login-wrap {
            padding: 18px 0 24px;
        }

        .brand-title {
            font-size: 1.45rem;
        }

        .brand-points li {
            margin: 8px 0;
        }

        .login-grid {
            gap: 16px;
        }

        body {
            /* nền nhẹ hơn trên mobile cho mượt */
            background: radial-gradient(600px 420px at 10% -10%, rgba(30,136,229,.10), transparent 60%), #f3f4fb;
        }
    }
</style>

<div class="container login-wrap">
    <div class="login-grid">
        <!-- ===== Trái: brand ===== -->
        <section class="brand-pane">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
                <span class="brand-badge"><i class="bi bi-lightning-charge-fill"></i> Elitech Suite</span>
                <span class="chip"><i class="bi bi-shield-lock"></i> Secure Access</span>
            </div>

            <h2 class="brand-title display-6 mb-2">
                Quản trị <span class="grad">Elitech</span> nhanh &amp; mượt
            </h2>

            <p class="text-secondary mb-2">
                Nâng cấp vận hành doanh nghiệp với bảng điều khiển hợp nhất, quy trình mạch lạc
                và khả năng mở rộng linh hoạt cho nhiều đơn vị/chi nhánh.
            </p>
            <p class="text-secondary mb-4">
                Tối ưu thời gian phản hồi, giảm sai sót, và theo dõi KPI theo thời gian thực.
            </p>

            <ul class="brand-points mt-3">
                <li><i class="bi bi-speedometer2"></i><div><b>Bảng điều khiển realtime</b><br />Cập nhật tức thời tình trạng thiết bị.</div></li>
                <li><i class="bi bi-diagram-3"></i><div><b>Quyền &amp; vai trò rõ ràng</b><br />Phân quyền chi tiết theo nhóm/đơn vị.</div></li>
                <li><i class="bi bi-file-earmark-bar-graph"></i><div><b>Báo cáo thông minh</b><br />Biểu đồ, CSV, và xuất PDF nhanh chóng.</div></li>
                <li><i class="bi bi-bell"></i><div><b>Cảnh báo linh hoạt</b><br />Email/SMS/Push theo ngưỡng &amp; lịch trực.</div></li>
                <li><i class="bi bi-cloud-upload"></i><div><b>Đồng bộ đám mây</b><br />Sao lưu &amp; khôi phục cấu hình tức thì.</div></li>
            </ul>

            <div class="mt-4 d-flex flex-wrap gap-2">
                <span class="chip"><i class="bi bi-check-circle"></i> SSO sẵn sàng</span>
                <span class="chip"><i class="bi bi-check-circle"></i> 2FA bảo mật</span>
                <span class="chip"><i class="bi bi-check-circle"></i> Audit log</span>
                <span class="chip"><i class="bi bi-check-circle"></i> SLA 99.9%</span>
            </div>

            <div class="mt-4 small text-muted">
                <i class="bi bi-info-circle"></i>
                Dữ liệu được mã hóa khi truyền và lưu trữ. Tuân thủ tiêu chuẩn nội bộ về bảo mật &amp; nhật ký truy cập.
            </div>
        </section>

        <!-- ===== Phải: form login (giữ route/field) ===== -->
        <section class="form-pane">
            <div class="form-header mb-3">
                <h1>Đăng nhập</h1>
                <p>Chào mừng quay lại. Vui lòng nhập thông tin để tiếp tục.</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger rounded-3">
                    <i class="bi bi-exclamation-triangle"></i>
                    @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@e.ErrorMessage</div>
                    }
                </div>
            }

            <form asp-action="Index" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-semibold">Email hoặc Tên đăng nhập</label>
                    <div class="input-group input-group-lg elitech-input">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="admin" required />
                        <div class="invalid-feedback">Vui lòng nhập tài khoản</div>
                    </div>
                </div>

                <div class="mb-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <label class="form-label fw-semibold mb-1">Mật khẩu</label>
                    </div>
                    <div class="input-group input-group-lg elitech-input">
                        <span class="input-group-text"><i class="bi bi-key"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
                        <button type="button" class="btn btn-eye" onclick="togglePwd(this)">
                            <i class="bi bi-eye"></i>
                        </button>
                        <div class="invalid-feedback">Vui lòng nhập mật khẩu</div>
                    </div>
                    <a class="links small" href="/Login/Forgot"><i class="bi bi-key"></i> Quên mật khẩu?</a>
                </div>

                <button class="btn btn-elitech w-100 btn-lg mt-2" type="submit">
                    <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                </button>

                <div class="split-or mt-3">Hoặc</div>

                <div class="d-grid gap-2 mb-2">
                    <a class="btn btn-alt w-100" href="/Login/External?provider=Google">
                        <i class="bi bi-google"></i> Tiếp tục với Google
                    </a>
                    <a class="btn btn-alt w-100" href="/Login/External?provider=Microsoft">
                        <i class="bi bi-microsoft"></i> Tiếp tục với Microsoft
                    </a>
                </div>

                <div class="text-center mt-2 mb-2 links">
                    Chưa có tài khoản?
                    <a href="/Login/Register"><i class="bi bi-person-plus"></i> Đăng ký ngay</a>
                </div>

                <a class="btn btn-alt w-100 mb-3" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i> Về trang chủ
                </a>

                <hr class="my-3" />
                <div class="small text-muted">
                    Bằng việc đăng nhập, bạn đồng ý với
                    <a class="links" href="/Home/Privacy">Chính sách bảo mật</a> và
                    <a class="links" href="/Home/Terms">Điều khoản sử dụng</a>.
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) { event.preventDefault(); event.stopPropagation(); }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        function togglePwd(btn) {
            const input = btn.parentElement.querySelector('input[type="password"], input[type="text"]');
            const icon = btn.querySelector('i');
            if (!input) return;
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            }
        }
    </script>
}

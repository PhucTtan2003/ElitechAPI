                <button type="button" class="elx-mod-toggle" data-mod-toggle>
                    <div class="elx-mod-icon"><i class="bi bi-map"></i></div>
                    <div class="elx-mod-txt">
                        <div class="elx-mod-title">Module #5</div>
                        <div class="elx-mod-sub">Bản đồ nâng cao • heat-map</div>
                    </div>
                    <i class="bi bi-chevron-down elx-mod-arrow"></i>
                </button>


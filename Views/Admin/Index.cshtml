@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    :root {
        --o: #F58220;
        --o2: #E36F15;
        --b: #0D47A1;
        --b2: #1E88E5;
        --bg: #eef3fb;
        --txt: #0e1320;
        --mut: #6b7280;
        --glass: rgba(255,255,255,.54);
        --glass-2: rgba(255,255,255,.82);
        --glass-stroke: rgba(13,25,55,.12);
        --shadow: 0 18px 40px rgba(9,22,48,.16);
        --radius: 22px;
        --bd: #e7ebf3;
        --ok: #10B981;
        --warn: #F59E0B;
        --crit: #EF4444;
        --info: #3B82F6;
    }

    * {
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(180deg,#fff 0%,#fff9f3 100%);
        color: var(--txt);
    }

        /* background vision */
        body::before {
            content: "";
            position: fixed;
            inset: 0;
            z-index: -1;
            background: radial-gradient(800px 600px at 10% 0%, rgba(30,136,229,0.18), transparent 70%), radial-gradient(900px 600px at 90% 100%, rgba(245,130,32,0.18), transparent 70%);
            opacity: .65;
            pointer-events: none;
        }

    .elx-dashboard {
        font-family: Inter,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
        color: var(--txt);
        position: relative;
        z-index: 0;
        padding-bottom: 22px;
    }

        .elx-dashboard a {
            text-decoration: none;
        }

    /* ===== Hero ===== */
    .elx-hero {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 10px;
        margin: 8px 18px 16px;
        align-items: center;
    }

    .elx-hero-left h1 {
        font-size: 1.45rem;
        font-weight: 900;
        margin: 0 0 4px 0;
        letter-spacing: .01em;
    }

    .elx-hero-left p {
        margin: 0;
        color: var(--mut);
        font-size: .92rem;
    }

    .elx-hero-right {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 6px;
    }

    .elx-hero-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 999px;
        font-size: .8rem;
        background: rgba(255,255,255,.75);
        border: 1px solid rgba(148,163,184,.55);
        box-shadow: 0 10px 26px rgba(15,23,42,.18);
        backdrop-filter: blur(10px);
    }

        .elx-hero-pill i {
            color: var(--o2);
        }

    /* ===== Cards ===== */
    .elx-card {
        background: rgba(255,255,255,.92);
        border: 1px solid var(--bd);
        border-radius: 18px;
        padding: 14px 16px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05), 0 12px 32px rgba(0,0,0,0.15), 0 25px 55px rgba(0,0,0,0.12);
        position: relative;
        overflow: hidden;
        transition: transform .35s cubic-bezier(.22,1,.36,1);
    }

        .elx-card:hover {
            transform: translateY(-4px);
        }

    .elx-card-header {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 8px;
    }

        .elx-card-header h5 {
            margin: 0;
            font-size: 1rem;
            font-weight: 900;
        }

    .elx-card-sub {
        color: var(--mut);
        font-size: .85rem;
    }

    /* ===== Buttons & inputs ===== */
    .elx-btn {
        padding: 9px 12px;
        border-radius: 12px;
        border: 1px solid var(--bd);
        background: #fff;
        color: #111827;
        font-weight: 900;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 26px rgba(15,23,42,.10);
        font-size: .85rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .elx-btn.primary {
            background: linear-gradient(180deg,var(--o),var(--o2));
            border: 0;
            color: #111827;
        }

        .elx-btn.outline {
            border-color: var(--o);
            color: var(--o);
            background: #fff;
        }

        .elx-btn:disabled {
            opacity: .65;
            cursor: not-allowed;
            filter: grayscale(.2);
        }

    .elx-input {
        width: 100%;
        border: 1px solid var(--bd);
        border-radius: 12px;
        padding: 10px 12px;
        font-weight: 800;
        outline: none;
        background: #fff;
        box-shadow: 0 10px 26px rgba(15,23,42,.10);
    }

        .elx-input:focus {
            border-color: rgba(245,130,32,.65);
            box-shadow: 0 0 0 3px rgba(245,130,32,.16), 0 10px 26px rgba(15,23,42,.10);
        }

    .elx-form-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 12px;
        margin-top: 10px;
    }

    .elx-col-12 {
        grid-column: span 12;
    }

    .elx-col-6 {
        grid-column: span 12;
    }

    @@media (min-width: 768px) {
        .elx-col-6 {
            grid-column: span 6;
        }
    }

    .elx-help {
        font-size: .8rem;
        color: var(--mut);
        margin-top: 6px;
        line-height: 1.25rem;
    }

    .elx-kv {
        display: grid;
        grid-template-columns: 110px 1fr;
        gap: 6px 12px;
        font-size: .85rem;
        margin-top: 12px;
        padding: 10px 12px;
        border-radius: 14px;
        background: rgba(248,250,252,.75);
        border: 1px dashed #e5e7eb;
    }

        .elx-kv b {
            color: #111827;
        }

        .elx-kv span {
            color: #334155;
            word-break: break-word;
        }

    /* ===== Module grid (FIX phần bạn bị kì) ===== */
    .elx-modules {
        margin: 0 18px 18px;
    }

    .elx-mod-headbar {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 10px;
    }

    .elx-mod-head-title {
        font-weight: 900;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: .95rem;
    }

        .elx-mod-head-title i {
            color: var(--o2);
        }

    .elx-mod-head-hint {
        font-size: .85rem;
        color: var(--mut);
        text-align: right;
    }

    .elx-mod-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 14px;
    }

    .elx-mod {
        grid-column: span 12;
        background: rgba(255,255,255,.92);
        border: 1px solid rgba(226,232,240,.9);
        border-radius: 18px;
        box-shadow: 0 6px 18px rgba(15,23,42,.10);
        overflow: hidden;
        transition: transform .18s ease, box-shadow .18s ease;
    }

    @@media (min-width: 768px) {
        .elx-mod {
            grid-column: span 6;
        }
    }

    .elx-mod:hover {
        transform: translateY(-3px);
        box-shadow: 0 18px 40px rgba(15,23,42,.18);
    }

    .elx-mod-toggle {
        display: flex;
        align-items: center;
        gap: 10px;
        width: 100%;
        padding: 12px 14px;
        border: 0;
        background: transparent;
        cursor: pointer;
    }

    .elx-mod-icon {
        width: 34px;
        height: 34px;
        border-radius: 12px;
        display: grid;
        place-items: center;
        font-size: 18px;
        color: var(--b2);
        background: #eff6ff;
        box-shadow: inset 0 0 0 1px rgba(13,71,161,.08);
    }

    .elx-mod-txt {
        flex: 1;
        text-align: left;
    }

    .elx-mod-title {
        font-weight: 900;
        font-size: .92rem;
        margin-bottom: 2px;
    }

    .elx-mod-sub {
        font-size: .82rem;
        color: var(--mut);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 520px;
    }

    .elx-mod-arrow {
        margin-left: auto;
        font-size: 1rem;
        color: #6b7280;
        transition: transform .18s ease;
    }

    .elx-mod-body {
        padding: 0 14px 0;
        font-size: .85rem;
        color: #4b5563;
        border-top: 1px dashed #e5e7eb;
        max-height: 0;
        opacity: 0;
        transform: translateY(-4px);
        overflow: hidden;
        transition: max-height .22s ease, opacity .18s ease, transform .18s ease;
    }

    .elx-mod-foot {
        padding: 10px 0 14px;
        font-size: .82rem;
        color: #f97316;
        font-weight: 700;
    }

    .elx-mod.is-open .elx-mod-body {
        max-height: 220px;
        opacity: 1;
        transform: translateY(0);
        padding-top: 10px;
    }

    .elx-mod.is-open .elx-mod-arrow {
        transform: rotate(180deg);
    }

    /* ===== Table ===== */
    .elx-table-wrap {
        overflow: auto;
        margin-top: 8px;
        max-height: 260px;
    }

    .elx-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-size: .86rem;
    }

        .elx-table th, .elx-table td {
            padding: 10px 10px;
            border-bottom: 1px solid rgba(231,235,243,.9);
            text-align: left;
            vertical-align: middle;
        }

        .elx-table thead th {
            color: #637085;
            font-weight: 900;
            background: rgba(248,250,252,.85);
            position: sticky;
            top: 0;
            z-index: 1;
        }

    .elx-chip-status {
        display: inline-block;
        padding: .18rem .62rem;
        border-radius: 9999px;
        font-size: .75rem;
        font-weight: 900;
        border: 1px solid transparent;
    }

        .elx-chip-status.ok {
            background: #e8fff1;
            color: #059669;
            border-color: #bbf7d0;
        }

        .elx-chip-status.warn {
            background: #fff4e5;
            color: #d97706;
            border-color: #fed7aa;
        }

        .elx-chip-status.crit {
            background: #fee2e2;
            color: #b91c1c;
            border-color: #fecaca;
        }

        .elx-chip-status.info {
            background: #e0edff;
            color: #1d4ed8;
            border-color: #bfdbfe;
        }

    .elx-table tr:hover td {
        background: #fff7ef;
    }

    /* ===== Toast ===== */
    .elx-toast {
        position: fixed;
        right: 18px;
        top: 18px;
        z-index: 9999;
        min-width: 260px;
        max-width: 420px;
        padding: 12px 14px;
        border-radius: 14px;
        background: rgba(255,255,255,.96);
        border: 1px solid rgba(226,232,240,.9);
        box-shadow: 0 16px 45px rgba(15,23,42,.20);
        display: none;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

        .elx-toast.show {
            display: block;
        }

    .elx-toast-title {
        font-weight: 900;
        margin-bottom: 4px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .elx-dot {
        width: 10px;
        height: 10px;
        border-radius: 999px;
        display: inline-block;
    }

        .elx-dot.ok {
            background: var(--ok);
        }

        .elx-dot.err {
            background: var(--crit);
        }

        .elx-dot.warn {
            background: var(--warn);
        }

    .elx-toast-msg {
        font-size: .85rem;
        color: #334155;
        line-height: 1.25rem;
    }

    /* ===== Ripple ===== */
    .elx-ripple {
        position: absolute;
        border-radius: 50%;
        transform: scale(0);
        animation: elx-ripple .55s linear;
        background: rgba(255,255,255,.55);
        pointer-events: none;
    }

    @@keyframes elx-ripple {
        to {
            transform: scale(10);
            opacity: 0;
        }
    }

    /* ===== Dock bottom ===== */
    .elx-dock {
        position: sticky;
        bottom: 18px;
        display: flex;
        justify-content: center;
        margin-top: 18px;
        z-index: 5;
    }

    .elx-dock-inner {
        display: flex;
        align-items: center;
        gap: 18px;
        padding: 8px 14px;
        border-radius: 999px;
        background: #ffffff;
        border: 1px solid #e5e7eb;
        box-shadow: 0 10px 25px rgba(15,23,42,.18), 0 1px 3px rgba(15,23,42,.08);
    }

    .elx-dock a {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 5px 10px;
        border-radius: 999px;
        font-size: .82rem;
        font-weight: 900;
        color: #111827;
        transition: background .15s ease, color .15s ease, transform .12s ease;
    }

        .elx-dock a i {
            font-size: 15px;
        }

        .elx-dock a.active {
            background: linear-gradient(180deg,#F58220,#E36F15);
            color: #111827;
        }

    @@media (max-width: 576px) {
        .elx-dock {
            bottom: 12px;
            margin-top: 14px;
        }

        .elx-dock-inner {
            width: calc(100% - 24px);
            box-sizing: border-box;
            justify-content: space-between;
            gap: 6px;
            padding: 6px 10px;
            flex-wrap: wrap;
        }

        .elx-dock a {
            flex: 1 1 25%;
            justify-content: center;
            padding: 4px 4px;
            font-size: .78rem;
        }

            .elx-dock a i {
                font-size: 14px;
            }

        .elx-mod-headbar {
            flex-direction: column;
            align-items: flex-start;
        }

        .elx-mod-head-hint {
            text-align: left;
        }
    }
</style>

<div class="elx-toast" id="elxToast">
    <div class="elx-toast-title">
        <span class="elx-dot ok" id="elxToastDot"></span>
        <span id="elxToastText">Thông báo</span>
    </div>
    <div class="elx-toast-msg" id="elxToastMsg"></div>
</div>

<div class="elx-dashboard">

    <!-- Hero -->
    <div class="elx-hero">
        <div class="elx-hero-left">
            <h1>Dashboard giám sát thiết bị</h1>
            <p>Toàn cảnh trạng thái thiết bị, cảnh báo & realtime trong một màn hình.</p>
        </div>

        <div class="elx-hero-right">
            <span class="elx-hero-pill">
                <i class="bi bi-cloud-check"></i> Elitech Cloud • Production
            </span>
            <small class="text-muted" style="font-size:.78rem;">
                Giờ hệ thống: @DateTime.Now.ToString("HH:mm:ss dd/MM/yyyy")
            </small>
        </div>
    </div>

    <!-- MODULE GRID – COLLAPSIBLE -->
    <div class="elx-modules">
        <div class="elx-mod-headbar">
            <div class="elx-mod-head-title">
                <i class="bi bi-grid-3x3-gap-fill"></i>
                <span>Khu chức năng mở rộng</span>

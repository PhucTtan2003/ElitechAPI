@{
    ViewData["Title"] = "Trang chủ";
    Layout = "_Layout";
}

<style>
    :root {
        --o: #F58220;
        --o2: #E36F15;
        --b: #0D47A1;
        --b2: #1E88E5;
        --text: #0f172a;
        --muted: #6b7280;
        /* Liquid Glass */
        --glass: rgba(255,255,255,0.32);
        --glass-strong: rgba(255,255,255,0.55);
        --glass-border: rgba(255,255,255,0.25);
        --glass-border-soft: rgba(148,163,184,0.45);
        --glass-glow: rgba(88,130,255,0.35);
        /* Shadows */
        --shadow-soft: 0 10px 25px rgba(15,23,42,.12);
        --shadow-strong: 0 18px 40px rgba(10,20,40,.18);
        --shadow-glow: 0 0 40px rgba(55,130,255,.25);
        --radius-lg: 30px;
        --radius: 22px;
    }

    /* ===== Background Parallax Gradient ===== */
    body {
        background: radial-gradient(900px 520px at 0% -10%, rgba(30,136,229,.18), transparent 60%), radial-gradient(1000px 620px at 100% 0%, rgba(245,130,32,.20), transparent 70%), #eef3fb;
        animation: bgMove 28s ease-in-out infinite alternate;
        background-attachment: fixed;
        color: var(--text);
    }

    @@keyframes bgMove {
        from {
            background-position: 0% 0%, 100% 0%;
        }

        to {
            background-position: 0% 18%, 100% -18%;
        }
    }

    /* ===== Base ===== */
    .home-shell {
        position: relative;
        z-index: 0;
        font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    }

        .home-shell h1,
        .home-shell h2,
        .home-shell h3,
        .home-shell h4,
        .home-shell h5 {
            font-weight: 800;
        }

    .home-section-title {
        font-weight: 900;
        letter-spacing: .02em;
    }

    .home-section-sub {
        color: var(--muted);
        font-size: .95rem;
    }

    /* ===== HERO LIQUID GLASS ===== */
    .hero {
        border-radius: var(--radius-lg);
        background: var(--glass);
        backdrop-filter: blur(28px) saturate(185%);
        -webkit-backdrop-filter: blur(28px) saturate(185%);
        border: 1px solid var(--glass-border);
        box-shadow: var(--shadow-soft), var(--shadow-strong), inset 0 0 18px rgba(255,255,255,.35), inset 0 0 32px rgba(255,255,255,.10);
        position: relative;
        overflow: hidden;
    }

        /* Liquid border */
        .hero::before {
            content: "";
            position: absolute;
            inset: 0;
            padding: 2px;
            border-radius: var(--radius-lg);
            background: conic-gradient( from 180deg, rgba(255,255,255,0.0), rgba(255,255,255,0.7), rgba(37,99,235,0.9), rgba(245,130,32,0.9), rgba(255,255,255,0.7), rgba(255,255,255,0.0) );
            background-size: 260% 260%;
            filter: blur(9px) opacity(.36);
            animation: borderFlow 12s linear infinite;
            mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
        }

    @@keyframes borderFlow {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .hero-inner {
        position: relative;
        z-index: 1;
    }

    .hero-content {
        padding: 3.25rem 3rem;
    }

    .hero-eyebrow {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 4px 10px;
        border-radius: 999px;
        background: rgba(255,255,255,.82);
        border: 1px solid rgba(148,163,184,.6);
        font-size: .8rem;
        font-weight: 700;
        color: var(--muted);
        margin-bottom: 10px;
        box-shadow: 0 10px 26px rgba(15,23,42,.18);
    }

        .hero-eyebrow i {
            color: var(--o2);
        }

    .hero-title {
        font-size: 2.4rem;
        line-height: 1.25;
        margin-bottom: .75rem;
    }

        .hero-title span {
            background: linear-gradient(90deg, var(--b2), var(--o));
            -webkit-background-clip: text;
            color: transparent;
        }

    .hero-text {
        font-size: 1rem;
        color: var(--muted);
        max-width: 34rem;
    }

    .hero-meta-row {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin-top: 14px;
        font-size: .8rem;
        color: var(--muted);
    }

    .hero-meta-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 999px;
        background: rgba(255,255,255,.92);
        border: 1px solid rgba(226,232,240,1);
        box-shadow: var(--shadow-soft);
    }

        .hero-meta-pill i {
            color: var(--b2);
        }

    /* CTA buttons */
    .hero-btns {
        margin-top: 26px;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--b2), var(--b));
        border: none;
        border-radius: 16px;
        font-weight: 800;
        padding: 12px 28px;
        box-shadow: 0 10px 25px rgba(30,120,255,.30), inset 0 0 14px rgba(255,255,255,.40);
        transition: transform .22s cubic-bezier(.22,1,.36,1), box-shadow .22s cubic-bezier(.22,1,.36,1), filter .15s;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 14px 32px rgba(30,120,255,.40), inset 0 0 22px rgba(255,255,255,.45);
            filter: brightness(1.03);
        }

    .btn-outline {
        background: var(--glass-strong);
        border-radius: 16px;
        border: 1px solid var(--glass-border-soft);
        backdrop-filter: blur(16px);
        font-weight: 800;
        padding: 12px 24px;
        color: var(--text);
        box-shadow: 0 8px 20px rgba(15,23,42,.10);
        transition: transform .22s cubic-bezier(.22,1,.36,1), box-shadow .22s, background .18s;
    }

        .btn-outline:hover {
            background: #ffffff;
            transform: translateY(-3px);
            box-shadow: 0 12px 26px rgba(15,23,42,.18);
        }

    /* Hero illustration side */
    .hero-visual-wrap {
        padding: 2rem 2.5rem 2.5rem 1rem;
    }

    .hero-visual-card {
        border-radius: 24px;
        background: radial-gradient(circle at 0 0, rgba(255,255,255,.65), transparent 55%), rgba(15,23,42,.96);
        border: 1px solid rgba(148,163,184,.4);
        box-shadow: 0 20px 45px rgba(15,23,42,.6), 0 0 40px rgba(37,99,235,.35);
        padding: 1rem;
        color: #e5e7eb;
        position: relative;
        overflow: hidden;
    }

        .hero-visual-card::after {
            content: "";
            position: absolute;
            inset: -40%;
            background: radial-gradient(circle at 0 0, rgba(59,130,246,.25), transparent 55%), radial-gradient(circle at 100% 100%, rgba(248,113,113,.25), transparent 55%);
            opacity: .55;
            mix-blend-mode: soft-light;
            pointer-events: none;
        }

    .hero-visual-inner {
        position: relative;
        z-index: 1;
    }

    .hero-mini-label {
        font-size: .7rem;
        letter-spacing: .13em;
        text-transform: uppercase;
        color: #9ca3af;
        margin-bottom: 4px;
    }

    .hero-visual-title {
        font-size: .95rem;
        font-weight: 800;
        margin-bottom: 10px;
    }

    .hero-chip-row {
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
        margin-bottom: 10px;
    }

    .hero-chip {
        font-size: .7rem;
        padding: 3px 8px;
        border-radius: 999px;
        border: 1px solid rgba(148,163,184,.8);
        background: rgba(15,23,42,.85);
    }

    .hero-map {
        margin-top: 8px;
        border-radius: 16px;
        border: 1px solid rgba(148,163,184,.6);
        background: radial-gradient(circle at 0 0, rgba(56,189,248,.85), transparent 55%), radial-gradient(circle at 100% 100%, rgba(249,115,22,.85), transparent 55%), #020617;
        padding: 10px;
    }

    .hero-map-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
    }

    .hero-map-dot {
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: #22c55e;
        box-shadow: 0 0 0 0 rgba(34,197,94,.7);
        animation: dotPulse 1.6s infinite;
    }

    @@keyframes dotPulse {
        0% {
            box-shadow: 0 0 0 0 rgba(34,197,94,.7);
        }

        70% {
            box-shadow: 0 0 0 12px rgba(34,197,94,0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(34,197,94,0);
        }
    }

    .hero-stat-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 9px;
        border-radius: 999px;
        font-size: .75rem;
        background: rgba(15,23,42,.9);
        border: 1px solid rgba(148,163,184,.8);
    }

        .hero-stat-badge i {
            color: #22c55e;
        }

    /* ===== QUICK STATS STRIP ===== */
    .stats {
        border-radius: var(--radius);
        background: var(--glass);
        border: 1px solid var(--glass-border);
        backdrop-filter: blur(20px);
        padding: 18px;
        box-shadow: var(--shadow-soft), inset 0 0 12px rgba(255,255,255,.22);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, minmax(0,1fr));
        gap: 12px;
    }

    .stats-item {
        text-align: center;
    }

    .stats .num {
        font-size: 2.1rem;
        font-weight: 900;
        background: linear-gradient(90deg, var(--b2), var(--o));
        -webkit-background-clip: text;
        color: transparent;
        text-shadow: 0 0 18px rgba(255,255,255,.25);
        margin-bottom: 2px;
    }

    .stats .label {
        font-size: .85rem;
        color: var(--muted);
        font-weight: 600;
    }

    /* ===== FEATURE CARDS ===== */
    .feature {
        border-radius: 20px;
        background: var(--glass);
        backdrop-filter: blur(22px) saturate(180%);
        border: 1px solid var(--glass-border);
        padding: 22px;
        height: 100%;
        transition: .35s cubic-bezier(.3,1,.4,1);
        box-shadow: var(--shadow-soft), inset 0 0 14px rgba(255,255,255,.22);
    }

        .feature:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: var(--shadow-glow), 0 14px 28px rgba(15,23,42,.18), inset 0 0 20px rgba(255,255,255,.35);
            border-color: rgba(255,255,255,.6);
        }

    .feature-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
        background: rgba(88,130,255,.20);
        border-radius: 18px;
        padding: 12px;
        color: var(--b2);
        margin-bottom: 10px;
    }

    .feature h5 {
        margin-bottom: 4px;
    }

    .feature p {
        color: var(--muted);
        font-size: .9rem;
    }

    /* ===== WHY CARDS ===== */
    .why-card {
        display: flex;
        gap: 10px;
        align-items: flex-start;
        border-radius: 18px;
        padding: 14px 16px;
        background: rgba(255,255,255,.9);
        border: 1px solid rgba(226,232,240,.9);
        box-shadow: var(--shadow-soft);
        height: 100%;
        transition: transform .2s ease-out, box-shadow .2s ease-out;
    }

        .why-card i {
            width: 30px;
            height: 30px;
            border-radius: 12px;
            display: grid;
            place-items: center;
            background: rgba(37,99,235,.08);
            color: var(--b2);
        }

        .why-card h5 {
            font-size: .95rem;
            margin-bottom: 4px;
        }

        .why-card p {
            font-size: .86rem;
        }

        .why-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 24px rgba(15,23,42,.16);
        }

    /* ===== LOGOS STRIP ===== */
    .logos {
        border-radius: 20px;
        background: var(--glass);
        border: 1px dashed rgba(255,255,255,.55);
        backdrop-filter: blur(20px);
        padding: 16px 18px;
        box-shadow: var(--shadow-soft);
        display: flex;
        flex-wrap: wrap;
        gap: 18px;
        align-items: center;
        justify-content: center;
    }

        .logos img {
            opacity: .7;
            filter: grayscale(1);
            transition: .22s ease-out;
            max-height: 44px;
        }

            .logos img:hover {
                opacity: 1;
                filter: none;
                transform: translateY(-4px);
            }

    /* ===== TESTIMONIAL ===== */
    .testi {
        border-radius: 20px;
        background: var(--glass-strong);
        border: 1px solid var(--glass-border);
        backdrop-filter: blur(20px);
        padding: 18px 18px 16px;
        box-shadow: var(--shadow-soft), inset 0 0 14px rgba(255,255,255,.20);
        position: relative;
        overflow: hidden;
        font-size: .9rem;
    }

        .testi::before {
            content: "“";
            position: absolute;
            font-size: 4rem;
            color: rgba(148,163,184,.4);
            top: -18px;
            left: 10px;
        }

        .testi p {
            margin: 8px 0 0;
            color: var(--muted);
        }

        .testi .name {
            font-weight: 700;
            font-size: .86rem;
            color: var(--text);
        }

    /* ===== FAQ ===== */
    .faq .accordion-button {
        font-weight: 600;
    }

    .faq .accordion-item {
        border-radius: 14px !important;
        overflow: hidden;
        border: 1px solid rgba(226,232,240,1);
        box-shadow: 0 8px 18px rgba(15,23,42,.08);
    }

    .faq .accordion-button:not(.collapsed) {
        background: linear-gradient(135deg, rgba(30,64,175,.06), rgba(59,130,246,.06));
        color: var(--text);
    }

    /* ===== CTA ===== */
    .cta {
        border-radius: 26px;
        background: radial-gradient(circle at 0 0, rgba(96,165,250,.35), transparent 55%), radial-gradient(circle at 100% 100%, rgba(248,113,113,.28), transparent 55%), linear-gradient(135deg, var(--b2), var(--b));
        padding: 3rem 2rem;
        text-align: center;
        color: #fff;
        box-shadow: 0 12px 28px rgba(15,23,42,.45), inset 0 0 20px rgba(255,255,255,.22);
        position: relative;
        overflow: hidden;
    }

        .cta::after {
            content: "";
            position: absolute;
            inset: -40%;
            background: radial-gradient(circle at 0 0, rgba(255,255,255,.18), transparent 55%), radial-gradient(circle at 100% 0, rgba(251,191,36,.20), transparent 55%);
            opacity: .7;
            mix-blend-mode: soft-light;
            pointer-events: none;
        }

    .cta-inner {
        position: relative;
        z-index: 1;
    }

    .cta .btn-light {
        padding: 12px 28px;
        font-weight: 800;
        border-radius: 16px;
        box-shadow: 0 10px 24px rgba(15,23,42,.45);
    }

    /* ===== Responsive tweaks ===== */
    @@media (max-width: 991.98px) {
        .hero-content {
            padding: 2.4rem 1.6rem 2.2rem;
        }

        .hero-visual-wrap {
            padding: 0 1.6rem 2rem;
        }

        .stats-grid {
            grid-template-columns: repeat(2, minmax(0,1fr));
        }
    }

    @@media (max-width: 767.98px) {
        .hero-title {
            font-size: 2rem;
        }

        .stats-grid {
            grid-template-columns: minmax(0,1fr);
        }
    }
</style>

<div class="home-shell">
    <div class="container py-5">

        <!-- HERO -->
        <section class="hero mb-4">
            <div class="hero-inner">
                <div class="row g-0 align-items-center">
                    <div class="col-lg-7">
                        <div class="hero-content">
                            <div class="hero-eyebrow">
                                <i class="bi bi-cloud-check"></i>
                                Elitech Cloud • Device Monitoring Suite
                            </div>

                            <h1 class="hero-title mb-2">
